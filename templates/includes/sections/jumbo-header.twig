{% if backgroundColor is defined %}
	{% set style = 'style=background-color:' ~ backgroundColor %}
{% else %}
	{% set style = null %}
{% endif %}
<section class="section" {{ style ? style : null }}>
	<div class="container">
		<div class="row middle-xs center-xs text-center-xs">
			<div class="col col-xs-12 col-md-6 text-left-md">
				<div class="text-padding">
					<h1>{{ heading }}</h1>
					{{ text }}
					<a class="btn btn-large space-xs space-sm" aria-label="Sign up free" href="{{ link }}">{{ linkText }}</a>
				</div>
			</div>
			{% if image %}
			<div class="col col-xs-12 col-md-6">
				<img class="img-responsive img-full-width" src="{{ image.url }}" alt="{{ image.title }}" />
			</div>
			{% endif %}
		</div>
	</div>
</section>
