{% if backgroundColor %}
	{% set style = 'style=background-color:' ~ backgroundColor %}
{% else %}
	{% set style = null %}
{% endif %}
{% if idValue %}
	{% set id = 'id=' ~ idValue %}
{% else %}
	{% set id = null %}
{% endif %}
<section class="section" {{ style }} {{ id }}>
	<h2>Test</h2>
{% set client = {
    base_uri : 'https://jsonplaceholder.typicode.com',
    timeout : 10
} %}

{% set requests = fetch(client, 'GET', '/posts') %}
{% for result in requests.body %}
	<p>{{result.title}}</p>
{% endfor %}
</section>
