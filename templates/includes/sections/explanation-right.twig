{% if backgroundColor %}
	{% set style = 'style=background-color:' ~ backgroundColor %}
{% else %}
	{% set style = null %}
{% endif %}
<section class="section" {{ style }}>
	<div class="container">
		<div class="row middle-xs">
			<div class="col col-sm-12 col-md-6">
				<div class="img-responsive space-sm space-xs">
					<img src="{{ image.url }}" alt="{{ image.title }}" />
				</div>
			</div>
			<div class="col col-sm-12 col-md-6">
				<div class="text-padding">
					<h2 class="">{{ heading }}</h2>
					{{ text }}
					{% if explanationRightLink %}
						{% if explanationRightLink.href.one.internalHref.one.url() is defined %}
						<a href="{{ explanationRightLink.href.one.internalHref.one.url() }}">{{ explanationRightLink.href.one.linkTitle }}</a>
						{% elseif explanationRightLink.href.one.externalHref is defined %}
						<a href="{{ explanationRightLink.href.one.externalHref }}" target="_blank">{{ explanationRightLink.href.one.linkTitle }}</a>
						{% endif %}
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</section>
