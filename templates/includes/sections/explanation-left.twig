{% if backgroundColor %}
	{% set style = 'style=background-color:' ~ backgroundColor %}
{% else %}
	{% set style = null %}
{% endif %}
{% if idValue %}
	{% set id = 'id=' ~ idValue %}
{% else %}
	{% set id = null %}
{% endif %}
<section class="section" {{ style }} {{ id }}>
	<div class="container">
		<div class="row middle-xs reverse">
			<div class="col col-sm-12 col-md-6">
				<div class="img-responsive space-sm space-xs">
					<img src="{{ image.url }}" alt="{{ image.title }}" />
				</div>
			</div>
			<div class="col col-sm-12 col-md-6">
				<div class="text-padding">
					<h3 class="">{{ heading }}</h3>
					{{ text }}
					{% if explanationLeftLink %}
						{% if explanationLeftLink.href.one.internalHref.one.url() is defined %}
						<a href="{{ explanationLeftLink.href.one.internalHref.one.url() }}{{ explanationLeftLink.href.one.idLink ?  '#' ~ explanationLeftLink.href.one.idLink : ''}}">{{ explanationLeftLink.href.one.linkTitle }}</a>
						{% elseif explanationLeftLink.href.one.externalHref is defined %}
						<a href="{{ explanationLeftLink.href.one.externalHref }}" target="_blank">{{ explanationLeftLink.href.one.linkTitle }}</a>
						{% endif %}
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</section>
